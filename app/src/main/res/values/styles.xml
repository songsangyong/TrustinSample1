<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TitleTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_000000</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/selector_background_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/color_000000</item>
    </style>

    <style name="SubTitleTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_000000</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/background_round_ffffff</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/color_000000</item>
    </style>
    <style name="BoxTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/background_round_ffffff</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/color_000000</item>
    </style>
</resources>
